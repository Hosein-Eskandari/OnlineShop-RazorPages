@using _0_Framework.Application
@using _0_Framework.Infrastructure
@inject IAuthHelper AuthHelper;
@{
    var currentAccount = AuthHelper.CurrentAccountInfo();
}

<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                <img src="~/AdminTheme/assets/images/users/avatar-1.jpg" alt="" class="thumb-md img-circle">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        @currentAccount.FullName<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="javascript:void(0)">
                                <i class="md md-face-unlock"></i> Profile
                                <div class="ripple-wrapper"></div>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="md md-settings"></i> Settings</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="md md-lock"></i> Lock screen</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="md md-settings-power"></i> Logout</a>
                        </li>
                    </ul>
                </div>
                <hr/>
                <p class="text-muted m-0">نقش : @currentAccount.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect active">
                        <i class="fa fa-bar-chart-o"></i><span> داشبورد </span>
                    </a>
                </li>

                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li>
                        <a asp-page="/Inventory/Index" class="waves-effect">
                            <i class="fa fa-recycle"></i><span> انبارداری </span>
                        </a>
                    </li>

                    <li>
                        <a asp-page="/Shop/Orders/Index" class="waves-effect">
                            <i class="fa fa-credit-card"></i><span> سفارشات </span>
                        </a>
                    </li>

                    <li class="has_sub">
                        <a class="waves-effect">
                            <i class="fa fa-shopping-cart"></i><span> فروشگاه </span>
                            <span class="pull-right">
                                <i class="md md-add"></i>
                            </span>
                        </a>
                        <ul class="list-unstyled">
                            <li>
                                <a class="fa fa-share-square " asp-page="/Shop/Slides/Index"> اسلایدر </a>
                            </li>
                            <li>
                                <a class="fa fa-archive" asp-page="/Shop/ProductCategories/Index"> گروه محصولات </a>
                            </li>
                            <li>
                                <a class="fa fa-archive" asp-page="/Shop/Products/Index"> محصولات </a>
                            </li>
                            <li>
                                <a class="fa fa-picture-o" fa-picture-o asp-page="/Shop/ProductPictures/Index"> عکس محصولات </a>
                            </li>
                        </ul>
                    </li>

                    <li class="has_sub">
                        <a class="waves-effect">
                            <i class="fa fa-gift"></i><span> سیستم تخفیفات </span>
                            <span class="pull-right">
                                <i class="md md-add"></i>
                            </span>
                        </a>
                        <ul class="list-unstyled">
                            <li>
                                <a class="fa fa-gift" asp-page="/Discounts/CustomerDiscounts/Index"> تخفیف مشتری </a>
                            </li>
                            <li>
                                <a class="fa fa-gift" asp-page="/Discounts/ColleagueDiscounts/Index"> نخفیف همکاری </a>
                            </li>

                        </ul>
                    </li>

                    <li class="has_sub">
                        <a class="waves-effect">
                            <i class="fa fa-user-plus"></i><span> مدیریت کاربران </span>
                            <span class="pull-right">
                                <i class="md md-add"></i>
                            </span>
                        </a>
                        <ul class="list-unstyled">
                            <li>
                                <a class="fa fa-user " asp-page="/Accounts/Account/Index"> کاربران </a>
                            </li>
                            <li>
                                <a class="fa fa-users " asp-page="/Accounts/Role/Index"> نقش ها </a>
                            </li>

                        </ul>
                    </li>
                }


                <li class="has_sub">
                    <a class="waves-effect">
                        <i class="fa fa-file-text"></i><span> سیستم بلاگینگ</span>
                        <span class="pull-right">
                            <i class="md md-add"></i>
                        </span>
                    </a>
                    <ul class="list-unstyled">
                        <li>
                            <a class="fa fa-pencil-square " asp-page="/Blog/Articles/Index"> مقالات </a>
                        </li>
                        <li>
                            <a class="fa fa-pencil-square " asp-page="/Blog/ArticleCategories/Index"> گروه مقالات </a>
                        </li>

                    </ul>
                </li>

                <li>
                    <a asp-page="/Comments/Index" class="waves-effect">
                        <i class="fa fa-comments"></i><span> کامنت ها </span>
                    </a>
                </li>

                <li>
                    <a asp-page="/Account" asp-page-handler="Logout" class="waves-effect">
                        <i class="fa fa-sign-out"></i>
                        <span> خروج </span>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>